      li.item-as(class= audio.filename)
        h5= audio.name
        .btc-analytic-signal-viewer(data-src= `${dataPath}${audio.filename}.mp3`, style= `background-image: url(${imgPath}${audio.filename}.png)`)
          .cover
          .btn-play
            i.mdi.mdi-play-circle

