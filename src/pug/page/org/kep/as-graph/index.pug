extends /_layout/_default-layout

prepend javascript-block
  script(src=`${rootPath}js/lib/swfobject.js`)

mixin card-media(fileName)
  .mdl-card__media
    .btc-swf-object(data-src=`${dataPath}${fileName}.swf`, data-width="610", data-height="377")

mixin card-link(file, type= 'data', title= null)
  a.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect(href= `${dataPath}${file}`)
    i.material-icons file_download
    if title
      = title


append config-block
  - title = 'e-Leaning数学教材向けグラフ描画プログラム'

block content-block
  +page-title

  .inner-block
    +heading(4)
      | 概要

    p e-Leaningの数学教材として開発したグラフ描画プログラムです。

    p 開発環境はFlash 8、開発言語はActionScript 2.0です。

    p
      | これらのプログラムは
      a(href='http://www.kepnet.co.jp/', target='_blank') 金沢電子出版株式会社
      | の協力によって制作されました。

    section
      .card.mdl-card.mdl-shadow--2dp
        h5.mdl-card__title
          | sinのグラフ

        +card-media('sin')

        .mdl-card__actions.mdl-card--border
          +card-link('sin.fla', 'data', 'flaファイル')
          +card-link('sin.swf', 'swf','swfファイル')

    section
      .card.mdl-card.mdl-shadow--2dp
        h5.mdl-card__title
          | リサージュ曲線

        +card-media('lissajous')

        .mdl-card__actions.mdl-card--border
          +card-link('lissajous.fla', 'data', 'flaファイル')
          +card-link('lissajous.swf', 'swf', 'swfファイル')

    section
      .card.mdl-card.mdl-shadow--2dp
        h5.mdl-card__title
          | sinとcosのグラフ

        +card-media('b103')

        .mdl-card__actions.mdl-card--border
          +card-link('b103.fla', 'data', 'flaファイル')
          +card-link('b103.swf', 'swf', 'swfファイル')
          +card-link('myclass103.as', 'data', '読み込みasファイル')

    section
      .card.mdl-card.mdl-shadow--2dp
        h5.mdl-card__title
          | 微分

        +card-media('diff')

        .mdl-card__actions.mdl-card--border
          +card-link('diff.fla', 'data', 'flaファイル')
          +card-link('diff.swf', 'swf', 'swfファイル')
          +card-link('myclass102.as', 'data', '読み込みasファイル')

    section
      .card.mdl-card.mdl-shadow--2dp
        h5.mdl-card__title
          | 積分

        +card-media('integral')

        .mdl-card__actions.mdl-card--border
          +card-link('integral.fla', 'data', 'flaファイル')
          +card-link('integral.swf', 'swf', 'swfファイル')
          +card-link('myclass102.as', 'data', '読み込みasファイル')
