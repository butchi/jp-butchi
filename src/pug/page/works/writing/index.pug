extends /_layout/_works-category

prepend config-block
  - rootPath = '../../'
  - path = `works/writing/`

block works-index
  section
    h2
      | 詩・執筆
    .list
      -
        workArr = Object.values(works.sheet).filter((work) => (
          work.genreWriting
        ))
      each work in workArr
        +work-item(work)
